<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalJournal.Styles">

    <Style x:Key="MainGrid" TargetType="Grid">
        <Setter Property="Background" Value="#2d2c31"/>
    </Style>

    <Style x:Key="Header" TargetType="TextBlock">
        <Setter Property="Margin" Value="10 0 0 0" />
        <Setter Property="FontFamily" Value="Yu Gothic UI Semibold"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="AntiqueWhite"/>
    </Style>

    <Style x:Key="BarStyle" TargetType="CommandBar">
        <Setter Property="Background" Value="#7C4DBD"/>
        <Setter Property="IsOpen" Value="False"/>
        <Setter Property="Foreground" Value="AntiqueWhite"/>
        <Setter Property="RequestedTheme" Value="Dark"/>
    </Style>

    <Style x:Key="BarBtnStyle" TargetType="AppBarButton">
        <Setter Property="Foreground" Value="AntiqueWhite"/>
        <Setter Property="RequestedTheme" Value="Dark"/>
    </Style>

    <Style x:Key="HeaderBg" TargetType="Grid">
        <Setter Property="Background" Value="#7C4DBD"/>
    </Style>

    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="Background" Value="#2d2c31"/>
        <Setter Property="Foreground" Value="AntiqueWhite"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
</ResourceDictionary>

